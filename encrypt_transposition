#include <stdio.h>
#include <stdlib.h>
#include <string.h>

void encrypt_transposition(char inp[], int N) {
    int idx = 0;
    char out[50];

    for (int i = 0; i < N; i += 3) {
        out[idx++] = inp[i];
    }

    for (int i = 1; i < N; i += 3) {
        out[idx++] = inp[i];
    }

    for (int i = 2; i < N; i += 3) {
        out[idx++] = inp[i];
    }

    out[idx] = '\0';

    printf("Encrypted string: %s\n", out);
}

int main() {
    char input[50];

    printf("Enter a string to encrypt: ");
    scanf("%49s", input);  // Limiting input to prevent buffer overflow

    int len = strlen(input);
    encrypt_transposition(input, len);

    return 0;
}
